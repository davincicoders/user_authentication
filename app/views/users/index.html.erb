<h2>Welcome to my website!</h2>

<% if session[:user_id].present? %>
    Welcome back <%= User.find(session[:user_id]).first_name %>

    <%= link_to 'Sign Out', logout_path, method: :delete %>
<% else %>
    <%= link_to 'Sign Up', new_user_path %>

    <%= link_to 'Sign In', login_path %>
<% end %>